<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="401dp"
        android:layout_height="112dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#CC6419"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="150dp"
            android:layout_marginBottom="65dp"
            android:text="PARTICULAR"
            android:textColor="#1FEA18"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="94dp"
            android:layout_marginRight="150dp"
            android:layout_marginBottom="80dp"
            android:text="MRP"
            android:textColor="#1FEA18"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="40dp"

            android:layout_marginRight="150dp"
            android:layout_marginBottom="70dp"
            android:text="SALE ON"
            android:textColor="#1FEA18"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="58dp"
            android:layout_height="22dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="222dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="155dp"
            android:layout_marginBottom="83dp"
            android:text="BUY ON"
            android:textColor="#1FEA18"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="59dp"
            android:layout_height="21dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="150dp"
            android:layout_marginBottom="85dp"
            android:text="PROFIT"
            android:textColor="#1FEA18"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item"
            android:layout_width="102dp"
            android:layout_height="56dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="1dp"
            android:text="ATTA"
            android:textColor="#000309"
            android:textSize="16dp"
            android:textStyle="bold">

        </TextView>

        <TextView

            android:id="@+id/num1"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="129dp"
            android:layout_marginTop="65dp"
            android:maxLines="1"
            android:padding="1dp"
            android:text="100000"
            android:textColor="#000309"
            android:textSize="18dp"
            android:textStyle="bold">

        </TextView>

        <TextView

            android:maxLines="1"
            android:id="@+id/num2"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="182dp"
            android:layout_marginTop="65dp"
            android:padding="1dp"
            android:text="10000"
            android:textColor="#1FEA18"
            android:textSize="18dp"
            android:textStyle="bold">

        </TextView>

        <TextView

            android:maxLines="1"
            android:id="@+id/num3"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="253dp"
            android:layout_marginTop="65dp"
            android:padding="1dp"
            android:text="10000"
            android:textColor="#000309"
            android:textSize="18dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:maxLines="1"
            android:id="@+id/num4"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="328dp"
            android:layout_marginTop="63dp"
            android:padding="1dp"
            android:text="1000"
            android:textColor="#000309"
            android:textSize="18dp"
            android:textStyle="bold">

        </TextView>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>